{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "singularName": "post",
    "pluralName": "posts",
    "displayName": "posts",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "unique": true,
      "required": true
    },
    "subtitle": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "author": {
      "type": "string",
      "unique": true,
      "required": true
    },
    "date": {
      "type": "date"
    },
    "picture": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "slug": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "comments": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::comment.comment",
      "mappedBy": "post"
    },
    "theme": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::theme.theme"
    },
    "introduction": {
      "type": "text"
    },
    "conclusion": {
      "type": "text"
    }
  }
}
